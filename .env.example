# ===========================================
# Chalssak - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Required Settings
# ===========================================

# Gemini API Key (Required)
# Get one at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_api_key_here

# ===========================================
# Environment Settings
# ===========================================

# Environment: development, production, test
APP_ENV=development

# Debug mode (set to false in production)
DEBUG=true

# ===========================================
# Server Settings
# ===========================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Number of workers (production only)
WORKERS=1

# ===========================================
# Database Settings
# ===========================================

# SQLite database URL
DATABASE_URL=sqlite:///./data/chalssak.db

# ===========================================
# CORS Settings
# ===========================================

# Allowed origins (comma-separated, use * for all in development)
# Example for production: CORS_ORIGINS=https://myapp.com,https://www.myapp.com
CORS_ORIGINS=*

# ===========================================
# Channel Settings
# ===========================================

# Days until channel is marked inactive
CHANNEL_INACTIVE_DAYS=90

# Maximum files per channel
MAX_FILES_PER_CHANNEL=100

# Maximum channel size in MB
MAX_CHANNEL_SIZE_MB=500

# Maximum file size in MB
MAX_FILE_SIZE_MB=50

# ===========================================
# Logging
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
